<div class="card mb-3 user_thumbnail" style="max-width: 95%;">
  <div class="row g-0">
    <div class="col-md-4">
      <img src=<%= u.photo %> class="img-fluid rounded-start" alt="walking in the sunset">
    </div>
    <div class="col-md-8">
      <div class="card-body d-flex flex-column">
        <h2 class="card-title m-5">
          <%= link_to user_path(u.id) do %>
            <%= u.name %>
          <% end %>
        </h2>
        <p class="card-text text-end"><small class="text-body-secondary">Number of posts: <%= u.posts_counter %></small></p>
      </div>
    </div>
  </div>
</div>